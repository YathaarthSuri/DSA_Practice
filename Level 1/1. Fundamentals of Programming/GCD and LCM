import java.util.*;
    
    public class Main{
    
    public static void main(String[] args) {
      // write your code here  

      Scanner scn = new Scanner(System.in);
      int num1 = scn.nextInt();
      int num2 = scn.nextInt();

      int divisor = num1;
      int dividend = num2;

      int hcf = 0;
      int lcm = 0;

      while(divisor != 0)
      {
          int rem = dividend % divisor;
          hcf = divisor;
          dividend = divisor;
          divisor = rem;
      }

      System.out.println(hcf);

      lcm = (num1 * num2)/hcf;

      System.out.println(lcm);

     }
    }
